select	p.nome,
		p.sobrenome,
        p.CPF,
        p.sexo,
        e.rua,
        e.nr_endereco,
        e.bairro,
        e.cidade,
		e.uf,
        e.pais,
        e.cep,
        s.cargo,
        s.setor,
        c.telefone,
        c.email,
        ch.turno,
        f.salario_base,
        f.salario_extra,
        f.beneficio
from	pessoa p,
		endereco e,
		contato c,
        setor s,
        financeiro f,
        carga_horaria ch
	
